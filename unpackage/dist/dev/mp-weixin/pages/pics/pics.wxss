page {
  height: 100%;
}
.pics {
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.pics .left {
  border-right: 1px solid #edf0f2;
  width: 200rpx;
  height: 100%;
}
.pics .left view {
  height: 120rpx;
  line-height: 120rpx;
  font-size: 32rpx;
  text-align: center;
  border-bottom: 1px solid #edf0f2;
  color: #555555;
}
.pics .left view:nth-child(1) {
  border-top: 1px solid #edf0f2;
}
.pics .left .active {
  background-color: #C41D01;
  color: white;
}
.pics .right {
  width: 100%;
}
.pics .right .img {
  width: 540rpx;
  height: 540rpx;
  margin: 0 24rpx;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
}
.pics .right view:nth-child(1) {
  margin-top: 20rpx;
}
.pics .right .title {
  padding-left: 24rpx;
  padding-bottom: 16rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #090909;
}

